<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<include layout="@layout/title"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




   <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="20dp"
                android:text="destinyu"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:text="信用积分：271"
                android:textColor="#FFCC33"/>
        </LinearLayout>

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/circleImageView"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:src="@drawable/tou"
           android:layout_marginRight="25dp"/>
   </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="14dp"
       android:layout_marginTop="25dp"
       android:background="#EDEDED"/>
    <LinearLayout
        android:orientation="vertical"
       android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/littlename"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="昵称"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/the_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="destinyu"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:textSize="18dp"/>
        <Button
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/more"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/the_sex"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="性别"
            android:textColor="#000000"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="男"
            android:layout_marginTop="45dp"
            android:layout_marginRight="30dp"
            android:textSize="18dp"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/the_birthday"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="生日"
            android:textColor="#000000"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1997 年 8 月 25 日"
            android:layout_marginTop="45dp"
            android:layout_marginRight="30dp"
            android:textSize="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/the_ident"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="用车认证"
            android:textColor="#000000"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/ident"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="未完成"
            android:layout_marginTop="45dp"
            android:layout_marginRight="30dp"
            android:textSize="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/the_mem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ofo身份"
            android:textColor="#000000"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/mem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="认证用户"
            android:layout_marginTop="45dp"
            android:layout_marginRight="30dp"
            android:textSize="18dp"/>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="45dp"
            android:background="#EDEDED"/>
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/the_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机号"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="130****2725"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:textSize="18dp"/>
            <Button
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/more"/>
    </LinearLayout>
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/the_wechat"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="微信"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/wechat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="未绑定"
            android:layout_marginTop="50dp"
            android:layout_marginRight="15dp"
            android:textSize="18dp"/>
            <Button
                android:layout_marginTop="50dp"
                android:layout_marginRight="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/more"/>
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/the_qq"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="QQ"
                android:textColor="#000000"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="未绑定"
                android:layout_marginTop="35dp"
                android:layout_marginRight="15dp"
                android:textSize="18dp"/>
            <Button
                android:layout_marginTop="35dp"
                android:layout_marginRight="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/more"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="45dp"
            android:background="#EDEDED"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/the_campus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="校园认证"
                android:textColor="#000000"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/campus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="非校园用户"
                android:layout_marginTop="45dp"
                android:layout_marginRight="30dp"
                android:textSize="18dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="45dp"
            android:background="#EDEDED"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>
